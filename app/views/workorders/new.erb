<div class="col-sm-12">
  <div class="content ml-5">
    <h2 class="mb-5">Create a new Workorder</h2>
      <form action="/workorders" method="post">
        <label>Workorder Name: </label>
        <input type="text" name="name"><br>

        <label>Multiplier: </label>
        <input type="number" name="multiplier"><br>

        <label>Labour Hours Needed: </label>
        <input type="number" name="hours_needed"><br>

        <label>Desription: </label>
        <input type="text" name="description" id="description"><br>
        
        <input type="submit" value="Submit" id="submit">
      </form>
  </div>
</div>
 